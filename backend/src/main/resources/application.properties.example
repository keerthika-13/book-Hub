# Alternative Configuration File (application.properties)
# Use this instead of application.yml if you prefer .properties format
# Rename application.yml to application.yml.backup and use this file

# ========================================
# APPLICATION NAME
# ========================================
spring.application.name=book-hub

# ========================================
# SERVER CONFIGURATION
# ========================================
server.port=8080
server.error.include-message=always
server.error.include-binding-errors=always

# ========================================
# H2 DATABASE (Development - Default)
# ========================================
spring.datasource.url=jdbc:h2:mem:bookhubdb
spring.datasource.driver-class-name=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

# H2 Console
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# ========================================
# MYSQL DATABASE (Production - Uncomment to use)
# ========================================
#spring.datasource.url=jdbc:mysql://localhost:3306/bookhub?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC
#spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
#spring.datasource.username=root
#spring.datasource.password=your_password

# ========================================
# JPA / HIBERNATE
# ========================================
# Options: create, create-drop, update, validate, none
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.open-in-view=false

# For H2
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.H2Dialect

# For MySQL (uncomment when using MySQL)
#spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# ========================================
# LOGGING
# ========================================
logging.level.root=INFO
logging.level.com.bookhub=DEBUG
logging.level.org.springframework.web=DEBUG
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# ========================================
# JWT CONFIGURATION (Future Use)
# ========================================
jwt.secret=bookhub-secret-key-change-this-in-production
jwt.expiration=86400000

